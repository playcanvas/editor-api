{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop" : true,
        "jsx": "react",
        "lib": [
            "es2019",
            "dom",
            "dom.iterable"
        ],
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "types",
        "sourceMap": true,
        "target": "es6",
    },
    "include": ["src/**/*.js", "test/**/*.js", "rollup.config.js", "src/polyfills.ts"],
}
